<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title><%= title %></title>

    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/registro.css">
</head>

<body class="bg-overlay">

    <%- include("partials/navigation") %>

    <div class="bg-overlay">

        <div class="container vh-100 d-flex justify-content-center align-items-center animate__animated animate__fadeIn">

            <div class="card form-card shadow-sm">

                <div class="card-header text-center border-secondary">
                    <h3 style="color:#ffd60a;"><%= title %></h3>
                </div>

                <div class="card-body">

                    <% if (error) { %>
                        <div class="alert alert-danger text-center"><%= error %></div>
                    <% } %>

                    <form action="/registro/salida/<%= registro.id_registro %>" method="POST">

                        <div class="mb-3">
                            <label class="form-label">Fecha:</label>
                            <input type="date"
                                   class="form-control bg-dark text-white border-secondary"
                                   value="<%= registro.fecha %>"
                                   disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hora de Entrada:</label>
                            <input type="time"
                                   class="form-control bg-dark text-white border-secondary"
                                   value="<%= registro.hora_entrada %>"
                                   disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Veh√≠culo (Placa):</label>
                            <input type="text"
                                   class="form-control bg-dark text-white border-secondary"
                                   value="<%= registro.matricula ? registro.matricula : registro.id_vehiculo %>"
                                   disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Espacio:</label>
                            <input type="text"
                                   class="form-control bg-dark text-white border-secondary"
                                   value="<%= registro.ubicacion ? registro.ubicacion : registro.id_espacio %>"
                                   disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hora de Salida:</label>
                            <input type="time"
                                   name="hora_salida"
                                   class="form-control bg-dark text-white border-secondary"
                                   required>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Registrar Salida</button>
                            <a href="/registros/lista" class="btn btn-outline-secondary">Cancelar</a>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>

</body>
</html>
