<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <%- include("partials/head") %>
        <link rel="stylesheet" href="/css/rol.css">
</head>

<body class="bg-overlay">
    <%- include("partials/navigation") %>

        <div class="bg-overlay">
        <div class="container vh-100 d-flex justify-content-center align-items-center animate__animated animate__bounceIn">
            <div class="card animated flipInY form-card shadow-sm w-100" style="max-width: 600px;">

                <div class="card-header bg-dark text-white text-center border-secondary">
                    <h3 class="mb-0">
                        <%= title %>
                    </h3>
                </div>

                <div class="card-body">

                    <% if (error) { %>
                        <div class="alert alert-danger text-center">
                            <%= error %>
                        </div>
                        <% } %>

                            <form action="<%= datos.id_rol ? '/rol/editar/' + datos.id_rol : '/rol/agregar' %>"
                                method="POST" autocomplete="off">

                                <div class="mb-3">
                                    <label for="rol" class="form-label">Rol:</label>
                                    <input id="rol" name="rol" type="text"
                                        class="form-control bg-dark text-white border-secondary"
                                        placeholder="Administrador" value="<%= datos.rol || '' %>" required>
                                </div>

                                <div class="d-grid gap-2 mt-3">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                    <a href="/rol/lista" class="btn btn-outline-secondary">Ir a lista</a>
                                </div>

                            </form>

                </div>
            </div>
        </div>
</body>

</html>