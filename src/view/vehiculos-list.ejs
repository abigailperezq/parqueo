<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <!-- Bootstrap (opcional si ya lo cargas en partials/head) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <%- include("partials/head") %>
  <link rel="stylesheet" href="/css/vehiculo.css">
</head>

<body class="bg-overlay">

  <%- include("partials/navigation") %>

  <div class="bg-overlay">
    <div class="container py-4">
      <div class="container-box animate__animated animate__bounceIn">

        <% if (error) { %>
          <div class="alert alert-danger text-center">
            <%= error %>
          </div>
        <% } %>

        <% if (msg) { %>
          <div class="alert alert-success text-center">
            <%= msg %>
          </div>
        <% } %>

        <h3 class="text-center mb-4">Veh√≠culos registrados</h3>

        <!-- Buscador -->
        <div class="mb-3">
          <input 
            id="buscarVehiculo" 
            type="text" 
            class="form-control form-control-lg"
            placeholder="Buscar por matr√≠cula, marca, modelo, color, cliente..."
          >
        </div>

        <!-- Tabla responsive -->
        <div class="table-responsive">
          <table id="tablaVehiculos" class="table table-dark table-hover text-center align-middle mb-0">
            <thead>
              <tr>
                <th>Matr√≠cula</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Color</th>
                <th>Cliente</th>
                <th>Tipo de veh√≠culo</th>
                <th>Tarifa/hora ($)</th>
                <th>Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% if (vehiculos && vehiculos.length > 0) { %>
                <% vehiculos.forEach(v => { %>
                  <tr>
                    <td><%= v.matricula %></td>
                    <td><%= v.marca %></td>
                    <td><%= v.modelo %></td>
                    <td><%= v.color %></td>
                    <td><%= v.nombre_cliente %> (<%= v.dui_cliente %>)</td>
                    <td><%= v.nombre_tipo_vehiculo %></td>
                    <td><%= v.tarifa_hora %></td>
                    <td>
                      <a href="/vehiculo/editar/<%= v.id_vehiculo %>" class="btn btn-sm btn-success me-1">
                        ‚úè Editar
                      </a>
                      <a href="/vehiculo/eliminar/<%= v.id_vehiculo %>" 
                         class="btn btn-sm btn-danger"
                         onclick="return confirm('¬øSeguro que deseas eliminar este veh√≠culo?');">
                        üóë Eliminar
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8">No hay veh√≠culos registrados.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <div class="text-center mt-3">
          <a href="/vehiculos" class="btn btn-primary">Registrar nuevo veh√≠culo</a>
        </div>

      </div>
    </div>
  </div>

  <script>
    const inputBuscar = document.getElementById("buscarVehiculo");
    const tabla = document
      .getElementById("tablaVehiculos")
      .getElementsByTagName("tbody")[0];

    inputBuscar.addEventListener("keyup", function () {
      const filtro = inputBuscar.value.toLowerCase();

      for (let fila of tabla.rows) {
        const textoFila = fila.innerText.toLowerCase();
        fila.style.display = textoFila.includes(filtro) ? "" : "none";
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
