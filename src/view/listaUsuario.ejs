<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <%- include("partials/head") %>
  <link rel="stylesheet" href="/css/vehiculo.css">
</head>

<body class="bg-overlay">

  <%- include("partials/navigation") %>

  <div class="bg-overlay">
    <div class="container py-4">
      <div class="container-box animate__animated animate__bounceIn">

        <% if (error) { %>
          <div class="alert alert-danger text-center">
            <%= error %>
          </div>
        <% } %>

        <% if (msg) { %>
          <div class="alert alert-success text-center">
            <%= msg %>
          </div>
        <% } %>

        <h3 class="text-center mb-4">Usuarios registrados</h3>

        <div class="mb-3">
          <input 
            id="buscarUsuario"
            type="text"
            class="form-control form-control-lg"
            placeholder="Buscar usuario, nombre, correo, tel√©fono o rol..."
          >
        </div>

        <!-- Tabla responsive para m√≥vil -->
        <div class="table-responsive">
          <table id="tablaUsuarios" class="table table-dark table-hover text-center align-middle mb-0">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Nombre completo</th>
                <th>Correo</th>
                <th>Tel√©fono</th>
                <th>Rol</th>
                <th>Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% if (usuarios && usuarios.length > 0) { %>
                <% usuarios.forEach(u => { %>
                  <tr>
                    <td><%= u.usuario %></td>
                    <td><%= u.nombre %></td>
                    <td><%= u.correo %></td>
                    <td><%= u.telefono || '-' %></td>
                    <td><%= u.nombre_rol %></td>
                    <td>
                      <a href="/usuario/editar/<%= u.id_usuario %>" class="btn btn-sm btn-success me-1">
                        ‚úè Editar
                      </a>

                      <a href="/usuario/eliminar/<%= u.id_usuario %>" 
                        class="btn btn-sm btn-danger"
                        onclick="return confirm('¬øSeguro que deseas eliminar este usuario?');">
                        üóë Eliminar
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6">No hay usuarios registrados.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <div class="text-center mt-3">
          <a href="/usuario" class="btn btn-primary">Registrar nuevo usuario</a>
        </div>

      </div>
    </div>
  </div>

  <script>
    const inputBuscar = document.getElementById("buscarUsuario");
    const tabla = document
      .getElementById("tablaUsuarios")
      .getElementsByTagName("tbody")[0];

    inputBuscar.addEventListener("keyup", function () {
      const filtro = inputBuscar.value.toLowerCase();

      for (let fila of tabla.rows) {
        const textoFila = fila.innerText.toLowerCase();
        fila.style.display = textoFila.includes(filtro) ? "" : "none";
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
