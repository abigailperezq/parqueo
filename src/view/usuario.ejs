<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%- include("partials/head") %>
  <link rel="stylesheet" href="/css/vehiculo.css">
</head>

<body class="bg-overlay">

  <%- include("partials/navigation") %>

  <div class="bg-overlay">

    <div class="container d-flex justify-content-center align-items-start pt-5 pb-5 animate__animated animate__bounceIn">

      <div class="card animated flipInY form-card shadow-sm">

        <!-- Title -->
        <div class="card-header bg-dark text-white text-center border-secondary">
          <h3 class="mb-0"><%= title %></h3>
        </div>

        <div class="card-body">

          <% if (error) { %>
            <div class="alert alert-danger text-center"><%= error %></div>
          <% } %>

          <!-- FORM -->
          <form action="<%= usuario.id_usuario ? '/usuario/editar/' + usuario.id_usuario : '/usuario/agregar' %>"
                method="POST" autocomplete="off">

            <!-- Nombre -->
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre completo:</label>
              <input id="nombre" name="nombre" type="text"
                class="form-control bg-dark text-white border-secondary"
                placeholder="Juan Pérez"
                value="<%= (usuario && usuario.nombre) || '' %>" required>
            </div>

            <!-- Correo -->
            <div class="mb-3">
              <label for="correo" class="form-label">Correo electrónico:</label>
              <input id="correo" name="correo" type="email"
                class="form-control bg-dark text-white border-secondary"
                placeholder="correo@example.com"
                value="<%= (usuario && usuario.correo) || '' %>" required>
            </div>

            <!-- Teléfono -->
            <div class="mb-3">
              <label for="telefono" class="form-label">Teléfono:</label>
              <input id="telefono" name="telefono" type="text"
                class="form-control bg-dark text-white border-secondary"
                placeholder="7777-7777"
                value="<%= (usuario && usuario.telefono) || '' %>">
            </div>

            <!-- Usuario -->
            <div class="mb-3">
              <label for="usuario" class="form-label">Usuario:</label>
              <input id="usuario" name="usuario" type="text"
                class="form-control bg-dark text-white border-secondary"
                placeholder="nombreusuario"
                value="<%= (usuario && usuario.usuario) || '' %>" required>
            </div>

            <!-- Clave -->
            <div class="mb-3">
              <label for="clave" class="form-label">Contraseña:</label>
              <input id="clave" name="clave" type="password"
                class="form-control bg-dark text-white border-secondary"
                placeholder="********"
                value="<%= (usuario && usuario.clave) || '' %>" required>
            </div>

            <!-- Rol -->
            <div class="mb-3">
              <label for="id_rol" class="form-label">Rol:</label>

              <% const selectedRol = (usuario && usuario.id_rol); %>

              <select id="id_rol" name="id_rol"
                class="form-control bg-dark text-white border-secondary" required>
                <option value="">-- Seleccione un rol --</option>

                <% if (roles && roles.length > 0) { %>
                  <% roles.forEach(r => { %>
                    <option value="<%= r.id_rol %>" <%= selectedRol == r.id_rol ? 'selected' : '' %>>
                      <%= r.rol %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <!-- Botones -->
            <div class="d-grid gap-2 mt-3">
              <button type="submit" class="btn btn-primary">Guardar</button>
              <a href="/usuario/lista" class="btn btn-outline-secondary">Ir a lista</a>
            </div>

          </form>

        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
